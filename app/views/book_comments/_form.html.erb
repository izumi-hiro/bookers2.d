<%= form_with model: [book, @book_comment], local: false do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, class: "form-control book_comment border-secondary" %>
  </div>
  <div class="form-group">
    <%= f.submit "送信", class: "btn  btn-outline-secondary text-dark font-weight-bold" %>
  </div>
<% end %>